# ── 네트워크/RPC ────────────────────────────────────────────────────────────────
NETWORK=sepolia
RPC_URL=https://sepolia.infura.io/v3/<INFURA_KEY>

# ── Aave / Uniswap / Addresses ────────────────────────────────────────────────
AAVE_ADDRESSES_PROVIDER=0x<PoolAddressesProvider>
AAVE_UI_DATAPROVIDER=0x<UIDataProvider>        # (조회용)
UNIV4_POOL_MANAGER=0x<PoolManager>
UNIV4_POSITION_MANAGER=0x<PositionManager>     # (사용 시)

# ── House (DemoTrader) ────────────────────────────────────────────────────────
HOUSE_PK=__DO_NOT_COMMIT__                     # 로컬 테스트 전용. Git에 올리지 말 것.
HOUSE_ADDRESS=0x<houseEOA>

# ── Allowlist (Aave reserve 주소만, 쉼표 구분) ────────────────────────────────
ALLOWED_TOKENS=0x<TokenA>,0x<TokenB>,0x<TokenC>,0x<WETH>

# ── Front ────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_NETWORK=sepolia
NEXT_PUBLIC_POOL_MANAGER=0x<PoolManager>
NEXT_PUBLIC_ALLOWED_TOKENS=0x<TokenA>,0x<TokenB>,0x<TokenC>,0x<WETH>
